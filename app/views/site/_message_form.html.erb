<%= form_tag '/send_message', :method => :post do %>

  <div class="textfield">
    <%= label_tag :name, 'Имя' %><br />
    <%= text_field_tag :name %>
  </div>
  
  <div class="textfield">
    <%= label_tag :email, 'Эл. почта' %><br />
    <%= email_field_tag :email %>
  </div>
  
  <div class="textfield">
    <%= label_tag :phone, 'Телефон' %><br />
    <%= text_field_tag :phone %>
  </div>
  
  <div class="bg text-area">
    <%= label_tag :message, 'Сообщение' %><br />
    <%= text_area_tag :message, nil, :cols => 54, :rows => 7 %>
  </div>
  
  <div class="actions">
    <%= submit_tag 'Отправить', :id => :send_message_button, :onclick => "yaCounter10495273.reachGoal('SEND_MESSAGE')" %>
  </div>
<% end %>
