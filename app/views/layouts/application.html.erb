      <li><%= link_to_unless_current 'Контакты', '/contacts' do raw '<span>Контакты</span>' end %></li>
    </ul>
    <br class="clear" />
  </div> <!-- #head -->
  
  <div id="content">

  <%= yield %>

  </div> <!-- #content -->
  
  <div id="footer">
    <p>&copy; 2008-2011 ООО "Экстра"<br />
    <a href="/contacts">Контактная информация</a></p>
  </div> <!-- #footer -->
</div> <!-- #layout -->

